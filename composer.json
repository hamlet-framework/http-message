{
  "name": "hamlet-framework/http-message",
  "type": "library",
  "description": "Hamlet Framework / HTTP / Request",
  "keywords": ["request", "response", "message", "stream", "http", "uri", "url", "psr-7"],
  "license": "GPL-2.0",
  "authors": [
    {
      "name": "Vasily Kartashov",
      "email": "info@kartashov.com"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "classmap-authoritative": true,
    "sort-packages": true
  },
  "provide": {
    "psr/http-message-implementation": "1.0"
  },
  "require": {
    "php": "^7",
    "psr/http-message": "@stable"
  },
  "require-dev": {
    "hamlet-framework/http-message-spec": "@stable",
    "phpunit/phpunit": "^6 || ^7",
    "squizlabs/php_codesniffer": "@stable",
    "vimeo/psalm": "@stable"
  },
  "autoload": {
    "psr-4": {
      "Hamlet\\Http\\Message\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hamlet\\Http\\Message\\": "tests"
    }
  }
}
